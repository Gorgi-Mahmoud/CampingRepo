{% block body3 %}

    <div class="bg-light p-3">

    </div>
    {% if items | length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>

            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.nomprod }}</td>
                    <td>{{ item.product.prixprod }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.prixprod * item.quantity }}</td>
                    <td>
                        <a href="{{ path('cart_remove',{'id': item.product.id}) }}" class="btn btn-danger btn-sm">
                          <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('commande_new',{'id':item.product.id}) }} "class="btn float-right">
                            <i class="fas text-right"></i>
                            Order
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total : </td>
                <td>{{ total }}</td>

            </tr>

        </tfoot>
    </table>
    {% else %}
        <p>Your cart is empty go fill it !!</p>
    {% endif %}


{% endblock %}