{% extends 'base.html.twig' %}
{% block titreblog %}
    {{ Blog.titre }}
{% endblock %}
{% block body %}
<section id="inner_pages">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <article class="article_wrap single_post">
                    <div class="post-thumbnail">
                        <img src="assets/images/post_5.jpg" alt="image">
                    </div>
                    <div class="entry-desc">
                        <div class="entry-content">
                            <p>{{ Blog.contenu }}</p>
                        </div>
                    </div>
                    <div class="post_tag">
                        <span>Tag:</span>
                        {%  set foo = Blog.tags|split(' ') %}
                        {% for s in foo %}
                        <a href="#">{{ s }}</a>
                        {% endfor %}

                    </div>
                    <div class="share_post">
                        <a href="#" class="facebook"><i class="fa fa-facebook-f"></i> Facebook</a>
                        <a href="#" class="linkedin"><i class="fa fa-linkedin"></i> Linkedin</a>
                        <a href="#" class="twitter"><i class="fa fa-twitter"></i> Twitter</a>
                        <a href="#" class="g_plus"><i class="fa fa-google-plus"></i> Goodle Plus</a>
                    </div>
                </article>

                <!-- All-Comments -->
                <div class="articale_comments">
                    <div id="comments">
                        <h4 class="block-head"> Number Of Comments : {{ comments|length }}</h4>
                        <ul class="commentlist">
                            {% for s in comments %}
                            <li class="comment">
                                <div class="comment-body">
                                    <div class="comment-author">

                                        <span class="fn">{{ s.name }}</span>
                                    </div>
                                    <div class="comment-meta commentmetadata"> <a href="#">Feb 23, 2020 at 12:52 pm</a> </div>
                                    <div class="comment-content">
                                        <p>{{ s.contenu }}</p>

                                </div>


                            </li>
                        </ul>
                        {% endfor %}
                    </div>
                </div>

                <!-- Comment-Form -->
                <div class="comment-respond">
                    <h4 class="block-head">Leave A Comment</h4>

                        <a class="form-group">
                            <a href="\..\addComment/{{ Blog.id }}" <button class="btn" name="submit" type="submit">Post Comment</button></a>
                        </div>
                </div>
            </div>

            <aside class="col-md-4">
                <div class="sidebar">
                    <div class="sidebar_widgets">

                    </div>

                </div>
            </aside>
        </div>
    </div>
</section>
{% endblock %}